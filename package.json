{
  "name": "sparkle",
  "version": "2.7.0",
  "description": "Sparkle",
  "main": "./out/main/index.js",
  "author": "The Parcoil Network",
  "homepage": "https://getsparkle.net",
  "pnpm": {
    "onlyBuiltDependenciesFile": "./trusted-dependencies-scripts.json"
  },
  "scripts": {
    "format": "prettier --write .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev -w",
    "build": "npm run build:vite && electron-builder",
    "build:vite": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@headlessui/react": "^2.2.7",
    "@lucide/lab": "^0.1.2",
    "@sentry/electron": "^6.11.0",
    "@sentry/react": "^9.46.0",
    "clsx": "^2.1.1",
    "discord-rpc": "^4.0.1",
    "electron-log": "^5.4.3",
    "electron-store": "8.1.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.542.0",
    "posthog-js": "^1.261.7",
    "react-router-dom": "^7.8.2",
    "react-toastify": "^11.0.5",
    "systeminformation": "^5.27.8",
    "tailwindcss": "^3.4.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.1.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "electron": "38.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "4.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "vite": "^6.3.5"
  },
  "repository": "https://github.com/Parcoil/Sparkle",
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Parcoil",
        "repo": "Sparkle",
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": ".",
        "filter": [
          "*.exe",
          "*.nip",
          "*.pow"
        ]
      },
      {
        "from": "resources/tweaks",
        "to": "tweaks"
      },
      {
        "from": "scripts",
        "to": "scripts",
        "filter": [
          "**/*"
        ]
      }
    ],
    "appId": "com.parcoil.sparkle",
    "productName": "sparkle",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "!**/.vscode/*",
      "!src/*",
      "!dist-old",
      "!dist-2",
      "!electron-builde.yml",
      "!images/*",
      "!electron.vite.config.{js,ts,mjs,cjs}",
      "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md}",
      "!{.env,.env.*,.npmrc,pnpm-lock.yaml}"
    ],
    "asarUnpack": [
      "resources/**",
      "scripts/**"
    ],
    "win": {
      "executableName": "sparkle",
      "requestedExecutionLevel": "requireAdministrator",
      "icon": "resources/sparkle2.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "artifactName": "${name}-${version}-setup.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": "always"
    },
    "npmRebuild": false
  }
}
